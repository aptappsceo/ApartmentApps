<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/header_section"
        android:id="@+id/HeaderSection"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        />



    <android.support.design.widget.TextInputLayout
        android:id="@+id/PaymentOptionTitleInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/PaymentOptionTitleInput"
            android:layout_width="match_parent"
            android:hint="Payment Option Title"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textShortMessage"
            android:minWidth="350dp"
            android:textColor="@color/primary_text_body"
            android:textColorHint="@color/secondary_text_body"
            android:singleLine="true"
            android:textCursorDrawable="@null"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/AccountHolderNameInputLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/AccountHolderNameInput"
            android:layout_width="match_parent"
            android:hint="Account Holder Name"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:minWidth="350dp"
            android:textColor="@color/primary_text_body"
            android:textColorHint="@color/secondary_text_body"
            android:singleLine="true"
            android:textCursorDrawable="@null"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/AccountNumberInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/AccountNumberInput"
            android:layout_width="match_parent"
            android:hint="Account Number"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:minWidth="350dp"
            android:textColor="@color/primary_text_body"
            android:textColorHint="@color/secondary_text_body"
            android:singleLine="true"
            android:textCursorDrawable="@null"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/RoutingNumberInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/RoutingNumberInput"
            android:layout_width="match_parent"
            android:hint="Routing Number"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:minWidth="350dp"
            android:textColor="@color/primary_text_body"
            android:textColorHint="@color/secondary_text_body"
            android:singleLine="true"
            android:textCursorDrawable="@null"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/IsSavingsInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:hint="Is Savings?"
        />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/AddBankAccountButton"
        android:text="ADD BANK ACCOUNT"
        android:backgroundTint="@color/accent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="PAYMENTS"/>




</LinearLayout>