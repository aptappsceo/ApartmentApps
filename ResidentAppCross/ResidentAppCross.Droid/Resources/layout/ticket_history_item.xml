<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#aaaaaa"
    android:layout_height="44dp">

    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/PipeIconView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/accent"
            />

        <ImageView
            android:id="@+id/BackgroundIconView"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/circle_primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <ImageView
            android:id="@+id/IconView"
            android:padding="7dp"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>


    <LinearLayout
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.AppCompatTextView
            android:id="@id/TitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_weight="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:textColor="@color/primary_text_body" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/SubtitleLabel"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/secondary_text_body"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    </LinearLayout>

</LinearLayout>