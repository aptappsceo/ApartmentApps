<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/default_section_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/AvatarViewContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:background="@color/cardview_dark_background"
        android:layout_alignParentEnd="true"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/NameLabel"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/AvatarViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joshua Brewer"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/primary_text_body" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/AddressLabel"
        android:layout_below="@id/NameLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/AvatarViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ap. #1026, Block C 5667 Street D"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/secondary_text_body" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/PhoneLabel"
        android:layout_below="@id/AddressLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/AvatarViewContainer"
        android:gravity="center|left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/ticket_status_icon_padding"

        android:drawableLeft="@drawable/ic_android_black_24dp"
        android:text="+1 555 777-999"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/secondary_text_body" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/EmailLabel"
        android:layout_below="@id/PhoneLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:drawablePadding="@dimen/ticket_status_icon_padding"
        android:gravity="center|left"

        android:drawableLeft="@drawable/ic_android_black_24dp"
        android:layout_toLeftOf="@id/AvatarViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sinitreo@gmail.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/secondary_text_body" />




</RelativeLayout>