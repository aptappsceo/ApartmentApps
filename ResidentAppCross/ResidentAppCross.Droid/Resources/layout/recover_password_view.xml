<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_email_layout"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/login_form_view_textinput_margin"
            android:layout_marginEnd="@dimen/login_form_view_textinput_margin"
            android:padding="8dp"
            android:layout_marginTop="24dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/EmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:minWidth="350dp"
                android:textColor="@color/primary_text_body"
                android:textColorHint="@color/secondary_text_body"
                android:hint="Your Email"
                android:singleLine="true"
                android:textCursorDrawable="@null"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/RecoverPasswordButton"
            android:layout_marginTop="8dp"
            android:text="RECOVER PASSWORD"
            android:backgroundTint="@color/accent"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
