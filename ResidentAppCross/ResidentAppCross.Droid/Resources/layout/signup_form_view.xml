<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/ScrollContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Create New Account"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primary_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_firstname_layout"
                android:layout_width="match_parent"
                android:background="@color/invert_form_field_background"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/login_form_view_textinput_margin"
                android:layout_marginEnd="@dimen/login_form_view_textinput_margin"
                android:padding="8dp"
                android:layout_marginTop="24dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/FirstnameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:minWidth="350dp"
                    android:textColor="@color/primary_text_body"
                    android:textColorHint="@color/secondary_text_body"
                    android:hint="First Name"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_lastname_layout"
                android:layout_width="match_parent"
                android:background="@color/invert_form_field_background"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/login_form_view_textinput_margin"
                android:layout_marginEnd="@dimen/login_form_view_textinput_margin"
                android:padding="8dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/LastnameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:minWidth="350dp"
                    android:textColor="@color/primary_text_body"
                    android:textColorHint="@color/secondary_text_body"
                    android:hint="Last Name"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_email_layout"
                android:layout_width="match_parent"
                android:background="@color/invert_form_field_background"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/login_form_view_textinput_margin"
                android:layout_marginEnd="@dimen/login_form_view_textinput_margin"
                android:padding="8dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/EmailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:minWidth="350dp"
                    android:textColor="@color/primary_text_body"
                    android:textColorHint="@color/secondary_text_body"
                    android:hint="Email"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_phone_layout"
                android:padding="8dp"
                android:background="@color/invert_form_field_background"

                android:layout_marginStart="@dimen/login_form_view_textinput_margin"
                android:layout_marginEnd="@dimen/login_form_view_textinput_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/PhoneInput"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textNoSuggestions"
                    android:minWidth="350dp"
                    android:textColor="@color/primary_text_body"
                    android:textColorHint="@color/secondary_text_body"
                    android:hint="Phone Number"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"/>

                <!--            "-->

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_password_layout"
                android:padding="8dp"
                android:background="@color/invert_form_field_background"

                android:layout_marginStart="@dimen/login_form_view_textinput_margin"
                android:layout_marginEnd="@dimen/login_form_view_textinput_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/PasswordInput"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:minWidth="350dp"
                    android:textColor="@color/primary_text_body"
                    android:textColorHint="@color/secondary_text_body"
                    android:hint="Password"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"/>

                <!--            "-->

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_passwordconfirm_layout"
                android:padding="8dp"
                android:background="@color/invert_form_field_background"

                android:layout_marginStart="@dimen/login_form_view_textinput_margin"
                android:layout_marginEnd="@dimen/login_form_view_textinput_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/PasswordConfirmInput"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:minWidth="350dp"
                    android:textColor="@color/primary_text_body"
                    android:textColorHint="@color/secondary_text_body"
                    android:hint="Confirm Password"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"/>

                <!--            "-->

            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/SignUpButton"
                android:layout_marginTop="8dp"
                android:text="SIGN UP"
                android:backgroundTint="@color/accent"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>
