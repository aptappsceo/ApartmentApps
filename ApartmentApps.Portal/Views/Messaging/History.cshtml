@model IEnumerable<MessageViewModel>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Sent Messages</h2>
        <p>Messages that have been sent.</p>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            @*<div class="ibox-title">
                
            </div>*@
            <div class="ibox-content">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 60%;">Subject</th>
                            <th style="width: 13%;">Sent To</th>
                            <th style="width: 13%;">Sent On</th>
                            <th style="width: 13%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.Title</td>
                                <td>@item.DeliverCount</td>
                                <td>@item.SentOn</td>
                                <td><a class="btn btn-info btn-xs" href="@Url.Action("MessageDetails","Messaging", new {id=item.Id})">Details</a></td>
                                @*<td class="text-navy"> <i class="fa fa-level-up"></i> 40% </td>*@
                            </tr>


                            @*<div class="row">
                        <div class="col-lg-12">
                            <div class="ibox float-e-margins">
                                <div class="ibox-title">
                                    <h5>@item.Title</h5>
                                </div>
                                <div class="ibox-content"> </div>

                                    @Html.Raw(item.Body)
                                </div>
                                <div class="ibox-footer">
                                    Sent On: @item.SentOn
                                </div>
                            </div>
                        </div>
                    </div>*@
                        }
                    </tbody>
                </table>
             
            </div>
           
        </div>
    </div>
</div>
