@using ApartmentApps.Portal.Controllers
@model ApartmentApps.Modules.Payments.BindingModels.CancelUserLeaseInfoBindingModel

<div class="page-header">
    <h1 class="page-heading">Cancel Invoice</h1>
</div>
<div class="container">
    <div class="row wrapper">
        <div class="col-md-5">
            @using (Html.BeginForm("CancelUserLeaseInfo", "Payments"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <div class="well panel-danger">
                            <p>Cancelling Payment Request will cancel all the associated invoices.</p>
                            <p>Payment Request can only be cancelled if there is no associated invoices being processed at the moment.</p>
                        </div>

                    </div>

                    <div class="form-group">
                        <input type="submit" value="Confirm Cancel Payment Request" class="btn btn-block btn-danger" />
                    </div>
                    <div class="space-30"></div>
                    <div class="space-30"></div>
                    <div class="space-30"></div>
                </div>
            }
        </div>
    </div>
</div>
