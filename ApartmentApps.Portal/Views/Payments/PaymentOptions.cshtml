@model System.Collections.Generic.IEnumerable<ApartmentApps.Api.Modules.PaymentOptionBindingModel>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Payment Option</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Select your payment option or add a new one.</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5></h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Add Credit Card", "AddCreditCardFor", new {userId = ViewBag.UserId}, new { @class = "btn btn-primary btn-xs" })
                        @Html.ActionLink("Add Bank Account", "AddBankAccountFor", new { userId = ViewBag.UserId}, new { @class = "btn btn-primary btn-xs" })
                    </div>  
                </div>
                <div class="ibox-content">
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {

                            <div>
                                @Html.ActionLink($"Checkout with {item.FriendlyName}", "PaymentSummaryFor", new { userId = ViewBag.UserId, paymentOptionId = item.Id }, new { @class = "btn btn-primary" })
                            </div>
                        }
                    }
                    else
                    {
                        <h3>No Payment Options Available.  Please add a credit card or bank account to continue.</h3>
                    }
                </div>
            </div>
        </div>
    </div>
</div>