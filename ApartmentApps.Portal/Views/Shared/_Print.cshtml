<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Apartment Apps Management Portal | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body style="background-color: #fff !important; padding: 40px;">

    <!-- Wrapper-->
    <div id="wrapper">
       
            <!-- Main view  -->
            @RenderBody()

    </div>
    <!-- End wrapper-->

    @Scripts.Render("~/bundles/jquery")
    @*<script src="jquery.min.js" type="text/javascript"></script>
    <script src="jquery.timeago.js" type="text/javascript"></script>*@
    <script>
        jQuery(document).ready(function () {
            jQuery("abbr.timeago").timeago();
        });
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/metsiMenu")
    @Scripts.Render("~/plugins/pace")
    @Scripts.Render("~/plugins/flot")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/bundles/inspinia")

    @Html.EJ().ScriptManager()
    
    @RenderSection("scripts", required: false)
  
    <script src="/Scripts/FormFactory/FormFactory.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
</body>
</html>
