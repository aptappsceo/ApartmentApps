@using ApartmentApps.Data

@model IncidentReportViewModel

@{
    ViewBag.Title = "Details";
    var property = ViewBag.Property as Property;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Details</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">

            <div class="row animated fadeInRight">
                <div class="col-md-4">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Request Detail</h5>
                        </div>
                        <div>
                            <div class="ibox-content no-padding border-left-right">
                                <img alt="image" class="img-responsive" src="@Model.SubmissionBy.ImageUrl">
                            </div>
                            <div class="ibox-content profile-content">
                                <h4><strong>@Model.SubmissionBy.FullName</strong></h4>
                                <p><i class="fa fa-map-marker"></i> Unit: @Model.UnitName</p>
                                <h5>
                                    Details
                                </h5>
                                <p>
                                    @*<div><b>Permission To Enter</b> @Model.PermissionToEnter</div>*@
                                    <div><b>Type</b> @Model.Title</div>
                                    <div><b>Requested</b> @Html.Timeago(Model.RequestDate, property?.TimeZone)</div>
                                    <div><b>Status</b> @Model.StatusId</div>

                                </p>
                                <div class="user-button">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <a href="@Url.Action("Print", new {id = Model.Id})" class="btn btn-primary btn-sm btn-block"><i class="fa fa-envelope"></i>Printable</a>
                                        </div>


                                        @*<div class="col-md-6">
                                                <button type="button" class="btn btn-default btn-sm btn-block"><i class="fa fa-coffee"></i> Buy a coffee</button>
                                            </div>*@
                                    </div>
                                    @if (User.IsInRole("PropertyAdmin") || User.IsInRole("Admin"))
                                    {
                                        if (Model.StatusId != "Complete")
                                        {
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <a href="@Url.Action("Pause", new {id = Model.Id})" class="btn btn-primary btn-sm btn-block"><i class="fa fa-pause"></i>Pause</a>
                                                </div>
                                                <div class="col-md-6">
                                                    <a href="@Url.Action("Complete", new {id=Model.Id})" class="btn btn-primary btn-sm btn-block"><i class="fa fa-check"></i>Complete</a>
                                                </div>
                                            </div>

                                        }

                                    }


                                </div>
