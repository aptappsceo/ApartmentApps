@model IEnumerable<ApartmentApps.Data.Building>

@{
    ViewBag.Title = "Index";
}
<style type='text/css'>
    /*設定 數字靠右*/
    td:nth-child(3){text-align: right;}
    td:nth-child(5){text-align: right;}
</style>
<h2>Index</h2>
<h4>Building</h4>
<p>
    @Html.ActionLink("Create New", "BuildingCreate")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Property.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "BuildingEdit", new { id=item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Property.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

    </tr>
}

</table>
